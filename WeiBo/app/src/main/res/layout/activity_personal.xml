<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bathust.activity.PersonalActivity">
    <ImageView
        android:id="@+id/personal_photo"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/personal_photo"
        android:layout_toEndOf="@+id/personal_photo"
        android:layout_marginTop="15dp" />
    <TextView
        android:text="简介："
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_name"
        android:layout_alignStart="@+id/personal_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博"
        android:id="@+id/weibo_button"
        android:layout_below="@+id/personal_photo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注"
        android:id="@+id/friends_button"
        android:layout_alignTop="@+id/fans_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝"
        android:id="@+id/fans_button"
        android:layout_below="@+id/personal_photo"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
